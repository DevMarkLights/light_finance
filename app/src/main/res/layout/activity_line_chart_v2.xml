<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LineChart_V2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/symbolView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="symbol"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="price"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/symbolView"
            app:layout_constraintTop_toTopOf="parent" />

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/ip"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:text="In Portfolio"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imp_View_in_Portfolio"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/ip"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/green_check_mark" />

        <ImageView
            android:id="@+id/percentDrawable"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/priceView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/blank_square" />

        <TextView
            android:id="@+id/oneDayPercentChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="percent"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/percentDrawable"
            app:layout_constraintTop_toTopOf="parent" />

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/lccv"
            android:layout_width="419dp"
            android:layout_height="430dp"
            android:layout_marginTop="36dp"
            android:paddingTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="410dp"
                android:layout_height="409dp"
                android:layout_marginBottom="308dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/fiveDay"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="94dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:text="5day"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lccv" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/threeMoTV"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="0dp"
            android:text="3mo"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lccv" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/sixMoTV"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:layout_marginStart="204dp"
            android:text="6mo"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lccv" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/oneYear"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="104dp"
            android:layout_height="49dp"
            android:layout_marginEnd="5dp"
            android:text="1yr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lccv" />


        <soup.neumorphism.NeumorphCardView
            android:id="@+id/fiftyCardView"
            android:layout_width="411dp"
            android:layout_height="154dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neumorphCardView8"
            app:layout_constraintVertical_bias="0.031">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="Today"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:paddingTop="15dp"
                android:text="Open"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/openValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="60dp"
                android:paddingTop="15dp"
                android:text="value"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingTop="35dp"
                android:text="Low"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lowValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="60dp"
                android:paddingTop="35dp"
                android:text="value"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingTop="55dp"
                android:text="High"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/highValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="60dp"
                android:paddingTop="55dp"
                android:text="value"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingTop="75dp"
                android:text="Close"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/closeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="60dp"
                android:paddingTop="75dp"
                android:text="value"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="300dp"
                android:text="52 Week"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="275dp"
                android:paddingTop="16dp"
                android:text="Low"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fifty_two_week_low_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="325dp"
                android:paddingTop="16dp"
                android:text="value"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="275dp"
                android:paddingTop="35dp"
                android:text="High"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fifty_two_week_high_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="325dp"
                android:paddingTop="35dp"
                android:text="value"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="300dp"
                android:paddingTop="60dp"
                android:text="Dividend"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="260dp"
                android:paddingTop="75dp"
                android:text="Ex-Div"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/exDivDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="315dp"
                android:paddingTop="75dp"
                android:text="date"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="260dp"
                android:paddingTop="95dp"
                android:text="Amount"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/divAmountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="335dp"
                android:paddingTop="95dp"
                android:text="amount"
                android:textColor="@color/black" />


        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/similarStocksCard"
            android:layout_width="407dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fiftyCardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp">

                <soup.neumorphism.NeumorphTextView
                    android:id="@+id/Symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="284dp"
                    android:layout_marginBottom="1dp"
                    android:text="Similar Stocks"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/similarStocksRecView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/similarStocksRecView"
                    android:layout_width="382dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Symbol" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neumorphCardView8"
            android:layout_width="278dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/threeMoTV">

            <soup.neumorphism.NeumorphTextView
                android:id="@+id/highest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="5 day highest"
                android:textColor="@color/black" />

            <soup.neumorphism.NeumorphTextView
                android:id="@+id/highestValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="@color/black" />

            <soup.neumorphism.NeumorphTextView
                android:id="@+id/lowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="2dp"
                android:text="5 day lowest"
                android:textColor="@color/black" />

            <soup.neumorphism.NeumorphTextView
                android:id="@+id/lowestValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="@color/black" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphFloatingActionButton
            android:id="@+id/addStock"
            style="@style/Widget.Neumorph.FloatingActionButton"
            android:layout_width="63dp"
            android:layout_height="42dp"
            android:layout_marginEnd="120dp"
            android:backgroundTint="#FBF9F9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus_math_icon_163346" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>