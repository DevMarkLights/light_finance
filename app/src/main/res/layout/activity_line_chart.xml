<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LineChartView">

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/symbolView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="symbol"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/priceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="price"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/symbolView"
        app:layout_constraintTop_toTopOf="parent" />


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/lccv"
        android:layout_width="419dp"
        android:layout_height="430dp"
        android:paddingTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="410dp"
            android:layout_height="409dp"
            android:layout_marginBottom="308dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/fiveDay"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:text="5day"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lccv" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/threeMoTV"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="0dp"
        android:text="3mo"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lccv" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/sixMoTV"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginStart="204dp"
        android:text="6mo"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lccv" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/oneYear"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="104dp"
        android:layout_height="49dp"
        android:layout_marginEnd="5dp"
        android:text="1yr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lccv" />

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/highest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="Highest"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiveDay" />

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/highestValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="530dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="500dp"
        android:text="Lowest"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/lowestValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="530dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphCardView
        android:layout_width="418dp"
        android:layout_height="178dp"
        android:layout_marginTop="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highestValue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:text="Today"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingTop="15dp"
            android:text="Open"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/openValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="60dp"
            android:paddingTop="15dp"
            android:text="value"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="35dp"
            android:text="Low"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lowValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="60dp"
            android:paddingTop="35dp"
            android:text="value"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="55dp"
            android:text="High"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/highValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="60dp"
            android:paddingTop="55dp"
            android:text="value"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="75dp"
            android:text="Close"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/closeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="60dp"
            android:paddingTop="75dp"
            android:text="value"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="300dp"
            android:text="52 Week"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="275dp"
            android:paddingTop="16dp"
            android:text="Low"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/fifty_two_week_low_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="325dp"
            android:paddingTop="16dp"
            android:text="value"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="275dp"
            android:paddingTop="35dp"
            android:text="High"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/fifty_two_week_high_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="325dp"
            android:paddingTop="35dp"
            android:text="value"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="300dp"
            android:paddingTop="60dp"
            android:text="Dividend"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="260dp"
            android:paddingTop="75dp"
            android:text="Ex-Div"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/exDivDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="315dp"
            android:paddingTop="75dp"
            android:text="date"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="260dp"
            android:paddingTop="95dp"
            android:text="Amount"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/divAmountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="335dp"
            android:paddingTop="95dp"
            android:text="amount"
            android:textColor="@color/black" />


    </soup.neumorphism.NeumorphCardView>


</androidx.constraintlayout.widget.ConstraintLayout>